{
  "name": "decent-espresso-control",
  "version": "2.0.0",
  "description": "Full-featured mobile web control toolkit for Decent espresso machines",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:netlify": "NODE_OPTIONS='--max-old-space-size=4096' npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@visx/visx": "^3.12.0",
    "chart.js": "^4.4.3",
    "d3": "^7.9.0",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.23.24",
    "idb": "^8.0.0",
    "lucide-react": "^0.428.0",
    "plotly.js-dist-min": "^3.2.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^6.26.0",
    "recharts": "^3.3.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-plotly.js": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  },
  "keywords": [
    "espresso",
    "decent",
    "bluetooth",
    "coffee",
    "mobile",
    "control"
